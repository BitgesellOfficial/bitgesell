bin_PROGRAMS += bench/bench_BGL
BENCH_SRCDIR = bench
BENCH_BINARY = bench/bench_BGL$(EXEEXT)

RAW_BENCH_FILES = \
  bench/data/block413567.raw
GENERATED_BENCH_FILES = $(RAW_BENCH_FILES:.raw=.raw.h)

bench_bench_BGL_SOURCES = \
  $(RAW_BENCH_FILES) \
  bench/addrman.cpp \
  bench/base58.cpp \
  bench/bech32.cpp \
  bench/bench.cpp \
  bench/bench.h \
  bench/bench_BGL.cpp \
  bench/block_assemble.cpp \
  bench/ccoins_caching.cpp \
  bench/chacha20.cpp \
  bench/chacha_poly_aead.cpp \
  bench/checkblock.cpp \
  bench/checkqueue.cpp \
  bench/crypto_hash.cpp \
  bench/data.cpp \
  bench/data.h \
  bench/descriptors.cpp \
  bench/duplicate_inputs.cpp \
  bench/examples.cpp \
  bench/gcs_filter.cpp \
  bench/hashpadding.cpp \
  bench/load_external.cpp \
  bench/lockedpool.cpp \
  bench/logging.cpp \
  bench/mempool_eviction.cpp \
  bench/mempool_stress.cpp \
  bench/merkle_root.cpp \
  bench/nanobench.cpp \
  bench/nanobench.h \
  bench/peer_eviction.cpp \
  bench/poly1305.cpp \
  bench/pool.cpp \
  bench/prevector.cpp \
  bench/rollingbloom.cpp \
  bench/rpc_blockchain.cpp \
  bench/rpc_mempool.cpp \
  bench/streams_findbyte.cpp \
  bench/strencodings.cpp \
  bench/util_time.cpp \
  bench/verify_script.cpp

nodist_bench_bench_BGL_SOURCES = $(GENERATED_BENCH_FILES)

bench_bench_BGL_CPPFLAGS = $(AM_CPPFLAGS) $(BGL_INCLUDES) $(BOOST_CPPFLAGS) $(EVENT_CFLAGS) $(EVENT_PTHREADS_CFLAGS) -I$(builddir)/bench/
bench_bench_BGL_CXXFLAGS = $(AM_CXXFLAGS) $(PIE_FLAGS)
bench_bench_BGL_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) $(PTHREAD_FLAGS)
bench_bench_BGL_LDADD = \
  $(LIBTEST_UTIL) \
  $(LIBBGL_NODE) \
  $(LIBBGL_WALLET) \
  $(LIBBGL_COMMON) \
  $(LIBBGL_UTIL) \
  $(LIBBGL_CONSENSUS) \
  $(LIBBGL_CRYPTO) \
  $(LIBLEVELDB) \
  $(LIBMEMENV) \
  $(LIBSECP256K1) \
  $(LIBUNIVALUE) \
  $(EVENT_PTHREADS_LIBS) \
  $(EVENT_LIBS) \
  $(MINIUPNPC_LIBS) \
  $(NATPMP_LIBS)

if ENABLE_ZMQ
bench_bench_BGL_LDADD += $(LIBBGL_ZMQ) $(ZMQ_LIBS)
endif

if ENABLE_WALLET
bench_bench_BGL_SOURCES += bench/coin_selection.cpp
bench_bench_BGL_SOURCES += bench/wallet_balance.cpp
bench_bench_BGL_SOURCES += bench/wallet_loading.cpp
bench_bench_BGL_SOURCES += bench/wallet_create_tx.cpp
bench_bench_BGL_LDADD += $(BDB_LIBS) $(SQLITE_LIBS)
endif

CLEAN_BGL_BENCH = bench/*.gcda bench/*.gcno $(GENERATED_BENCH_FILES)

CLEANFILES += $(CLEAN_BGL_BENCH)

bench/data.cpp: bench/data/block413567.raw.h

BGL_bench: $(BENCH_BINARY)

bench: $(BENCH_BINARY) FORCE
	$(BENCH_BINARY)

BGL_bench_clean : FORCE
	rm -f $(CLEAN_BGL_BENCH) $(bench_bench_BGL_OBJECTS) $(BENCH_BINARY)
